<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <custom_font.MyTextView_Lato

            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:text="Feburary 10,2017"
            android:textColor="#000000"

            android:textSize="@dimen/distance_text" />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/ic_circle3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="5dp"
                android:text="|"
                android:textColor="#000000"

                android:textSize="18dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="5dp"
                android:text="|"
                android:textColor="#000000"

                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="5dp"
                android:text="|"
                android:textColor="#000000"

                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="5dp"
                android:text="|"
                android:textColor="#000000"

                android:textSize="18dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:background="@mipmap/ic_circle3" />


        </LinearLayout>

        <custom_font.MyTextView_Lato
            android:id="@+id/pickup_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@+id/linear"
            android:text="Pickup Point"
            android:textColor="#5A5A5A"
            android:textSize="@dimen/text" />

        <custom_font.MyTextView_Lato
            android:id="@+id/pickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/pickup_point"

            android:layout_alignStart="@+id/pickup_point"
            android:layout_below="@+id/pickup_point"
            android:layout_marginTop="5dp"
            android:text="Udhoyg vihar, Phase V, Gurgaon"
            android:textColor="#A0A0A0"
            android:textSize="@dimen/text"
            android:textStyle="bold" />


        <custom_font.MyTextView_Lato
            android:id="@+id/drop_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linear"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@+id/linear"
            android:text="Drop Point"
            android:textColor="#5A5A5A"

            android:textSize="@dimen/text" />

        <custom_font.MyTextView_Lato
            android:id="@+id/drop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/drop_point"

            android:layout_alignStart="@+id/drop_point"
            android:layout_below="@+id/drop_point"
            android:layout_marginTop="5dp"
            android:text="Udhoyg vihar, Phase V, Gurgaon"
            android:textColor="#A0A0A0"
            android:textSize="@dimen/text"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>