<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/logbg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_alignParentTop="true"
            tools:context="com.googlemap.googlemap.MapsActivity"></fragment>

        <paztechnologies.com.meribus.custom_font.MyTextView_Lato
            android:id="@+id/current_location_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/map"
            android:layout_marginTop="20dp"
            android:drawableLeft="@mipmap/m_location"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:text="Your Location"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            android:textSize="17dp"
            app:backgroundTint="@color/textcolor" />

        <paztechnologies.com.meribus.custom_font.MyTextView_Lato
            android:id="@+id/current_location"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/current_location_txt"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/current_location_txt"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text=" B97,udhyog vihar,gurgaon"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            android:textSize="17dp"
            app:backgroundTint="@color/textcolor" />

        <paztechnologies.com.meribus.custom_font.MyTextView_Lato
            android:id="@+id/des_location_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_location_txt"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/m_location"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:text="Destination Location"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            android:textSize="17dp"
            app:backgroundTint="@color/textcolor" />

        <paztechnologies.com.meribus.custom_font.MyTextView_Lato

            android:id="@+id/des_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/des_location_txt"
            android:layout_alignParentRight="true"
            android:hint=" Your Location"
            android:maxLines="1"
            android:padding="10dp"
            android:textColorHint="@color/textcolor"
            android:textSize="17dp"
            app:backgroundTint="@color/textcolor" />

        <paztechnologies.com.meribus.custom_font.MyTextView_Lato
            android:id="@+id/distance_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/des_location_txt"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/m_location"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:text="Distance (in km)"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            android:textSize="17dp"
            app:backgroundTint="@color/textcolor" />

        <paztechnologies.com.meribus.custom_font.MyTextView_Lato

            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/distance_txt"
            android:layout_alignParentRight="true"
            android:hint="24 km"
            android:maxLines="1"
            android:padding="10dp"
            android:textColorHint="@color/textcolor"
            android:textSize="17dp"
            app:backgroundTint="@color/textcolor" />

        <paztechnologies.com.meribus.custom_font.MyTextView_Lato
            android:id="@+id/charge_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distance_txt"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/m_location"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:text="Charges"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            android:textSize="17dp"
            app:backgroundTint="@color/textcolor" />

        <paztechnologies.com.meribus.custom_font.MyTextView_Lato

            android:id="@+id/charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/charge_txt"
            android:layout_alignParentRight="true"
            android:hint="Rs 250"
            android:maxLines="1"
            android:padding="10dp"
            android:textColorHint="@color/textcolor"
            android:textSize="17dp"
            app:backgroundTint="@color/textcolor" />

        <paztechnologies.com.meribus.custom_font.MyTextView_Lato
            android:id="@+id/time_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/charge_txt"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/date_icon"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:text="Approx. Time"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            android:textSize="17dp"
            app:backgroundTint="@color/textcolor" />

        <paztechnologies.com.meribus.custom_font.MyTextView_Lato

            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/time_txt"
            android:layout_alignParentRight="true"
            android:hint="Rs 250"
            android:maxLines="1"
            android:padding="10dp"
            android:textColorHint="@color/textcolor"
            android:textSize="17dp"
            app:backgroundTint="@color/textcolor" />

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_txt"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/select_ride_custom"
            android:text="Payment"
            android:textSize="18dp" />
    </RelativeLayout>
</ScrollView>