<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <custom_font.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bank_spinner"
        android:layout_centerHorizontal="true"

        android:text="SELECT YOUR BANK"
        android:textColor="@color/lightgrey"
        android:textSize="@dimen/text" />

    <com.rey.material.widget.Spinner
        android:id="@+id/bank_spinner"
        style="@style/Material.Widget.Spinner"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:padding="5dp"
        app:rd_style="@style/Material.Drawable.Ripple.Wave"></com.rey.material.widget.Spinner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bank_spinner"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="41dp"
        android:background="@drawable/btn_shape"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="14dp">


        <custom_font.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="CONFIRM AND PAY Rs. 1000.00"
            android:textColor="#ffffff"
            android:textSize="@dimen/text" />
    </LinearLayout>
</RelativeLayout>
